## create the keystore

# password temporary always: changeme

# generate java keystore
keytool -genkey -alias inaetics -dname "CN=localhost, OU=Inaetics Node, O=Inaetics, L=Hengelo, S=Overijssel, C=NL" -keyalg RSA -keystore inaetics.keystore -keysize 2048

# generate csr from said keystore
keytool -keystore inaetics.keystore -certreq -alias inaetics -keyalg rsa -file inaetics.csr

#
# sign with cfssl - get client cert and root ca cert
#

# import the root ca cert
keytool -import -keystore inaetics.keystore -file CARoot.cert -alias InaeticsCARoot

# import the signed client cert
keytool -import -keystore inaetics.keystore -file inaetics.cert -alias inaetics

## create the truststore

# import ca cert into truststore
keytool -import -file CARoot.cert -alias InaeticsCARoot -keystore inaetics.truststore